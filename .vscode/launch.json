{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask Debugger",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "cwd": "${workspaceFolder}/src",
            "env": {
                "FLASK_APP": "main.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--debugger",
                "--reload"
            ],
            "jinja": true
        }
    ]
}